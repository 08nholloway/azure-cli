{
    "core": {
       
    },
    "cloud": {
        "name": {
            "default": "AzureCloud",
            "options": ["AzureCloud, AzureChinaCloud, AzureUSGovernment, AzureGermanCloud"],
            "type": "string"
        },
        "output": {
            "default": "json",
            "options": [
                {
                    "name": "json",
                    "description": "JSON formatted output that most closely matches API responses."
                },
                {
                    "name": "jsonc",
                    "description": "Colored JSON formatted output that most closely matches API responses."
                },
                {
                    "name": "table",
                    "description": "Human-readable output format."
                },
                {
                    "name": "tsv",
                    "description": "Tab- and Newline-delimited. Great for GREP, AWK, etc."
                },
                {
                    "name": "yaml",
                    "description": "YAML formatted output. An alternative to JSON. Great for configuration files."
                },
                {
                    "name": "yamlc",
                    "description": "Colored YAML formatted output. An alternative to JSON. Great for configuration files."
                },
                {
                    "name": "none",
                    "description": "No output, except for errors and warnings."
                }
            ], 
            "type": "string"
        }
       
    },
    "query": {
        "allow_list": {
            "default": "list, show",
            "options": ["list", "show", "version"],
            "type": "comma separated values"
        },
        "examples_len": {
            "default": "80",
            "options": [],
            "type": "integer"
        },
        "help_len": {
            "default": "80",
            "options": [],
            "type": "integer"
        },
        "max_exmples": {
            "default": "80",
            "options": [],
            "type": "integer"
        }
    },
    "extension": {
        "dir": {
            "default": "none",
            "type": "path",
            "options": []
        },
        "sources": {
            "default": "none",
            "type": "path",
            "options": []
        },
        "sys_dir": {
            "default": "none",
            "type": "path",
            "options": []
        },
        "index_url": {
            "default": "none",
            "type": "path",
            "options": []
        }
    },
    "logging": {
        "enable_log_file": {},
        "log_dir": {}
    }

}